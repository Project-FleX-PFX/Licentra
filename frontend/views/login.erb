<!DOCTYPE html>
<html>
  <head>
    <title>Licentra - Login</title>
    <meta charset="utf-8" />
    <!-- Hier ggf. noch eigene CSS-Dateien oder CDN-Links einbinden -->
    <link rel="stylesheet" type="text/css" href="/css/login.css">
  </head>

  <body>
    <div class="login-container">

      <div class="logo">
        <img src="/css/LizentraLogo.png" alt="Licentra Logo">
      </div>

      <!-- Ãœberschrift oder Titel oberhalb des Formulars -->
      <h2>Licentra</h2>

      <!-- Login-Formular -->
      <form action="/login" method="post">
        <!-- Email-Feld -->
        <div class="field">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Value">
        </div>

        <!-- Passwort-Feld -->
        <div class="field">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Value">
        </div>

        <!-- "Remember data" + "forgot password?" -->
        <div class="field">
          <label class="checkbox-remember">
            <input type="checkbox" id="remember_data" name="remember_data">
            <span>remember data</span>
          </label>
          <a href="#" class="forgot-password-link">forgot password?</a>
        </div>

        <!-- Login-Button -->
        <div class="actions">
          <input type="button" value="Login" class="login-button" onclick="window.location.href='/profile';">
        </div>

      </form>
    </div>
  </body>
</html>
