<!DOCTYPE html>
<html>
  <head>
    <title>Licentra - Login</title>
    <link rel="icon" type="image/png" href="/css/icon.png">
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="/css/login.css">
  </head>

  <body>
    <div class="login-container">

      <div class="logo">
        <img src="/css/LizentraLogo.png" alt="Licentra Logo">
      </div>

      <h2>Licentra</h2>

      <div id="form-error" class="error" style="<%= @error ? 'display:block; color: #d8000c; background-color: #ffcdcd; border: 1px solid #d8000c; padding: 10px; margin-bottom: 15px; border-radius: 4px;' : 'display:none' %>">
      <%= @error %>
      </div>

      <form id="login-form" action="/login" method="post">
        <div class="field">
          <label for="email">E-Mail</label>
          <input type="email" id="email" name="email" required>
        </div>

        <div class="field">
          <label for="password">Passwort</label>
          <input type="password" id="password" name="password" required>
        </div>

        <div class="actions">
          <input
            type="submit"
            id="login-button"
            value="Login"
            class="login-button">
        </div>
      </form>

      <div class="footer">
        <p>Noch kein Konto? <a href="/register">Hier registrieren</a></p>
      </div>
    </div>
  </body>
</html>
