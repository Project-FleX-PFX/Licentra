<!-- views/login.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Licentra - Login</title>
    <link rel="icon" type="image/png" href="/css/icon.png">
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="/css/login.css">
  </head>

  <body>
    <div class="login-container">

      <div class="logo">
        <img src="/css/LizentraLogo.png" alt="Licentra Logo">
      </div>

      <h2>Licentra</h2>

      <!-- allgemeine Fehlermeldung -->
      <div id="form-error" class="error" style="<%= @error ? 'display:block' : 'display:none' %>">
        <%= @error || 'Bitte E‑Mail und Passwort ausfüllen.' %>
      </div>

      <form id="login-form" action="/login" method="post">
        <div class="field">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Value">
        </div>

        <div class="field">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Value">
        </div>

        <div class="field">
          <label class="checkbox-remember">
            <input type="checkbox" id="remember_data" name="remember_data">
            <span>remember data</span>
          </label>
        </div>

        <div class="actions">
          <input
            type="submit"
            id="login-button"
            value="Login"
            class="login-button">
        </div>
      </form>

      <div class="footer">
        <p>Noch kein Konto? <a href="/register">Hier registrieren</a></p>
      </div>
    </div>
  </body>
</html>

