<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title>Lizenzverwaltung - Testdaten</title>
  <style>
    body { font-family: sans-serif; line-height: 1.4; margin: 20px; }
    h1, h2 { border-bottom: 1px solid #ccc; padding-bottom: 5px; margin-top: 30px; }
    table { border-collapse: collapse; width: 100%; margin-bottom: 20px; font-size: 0.9em; }
    th, td { border: 1px solid #ddd; padding: 8px; text-align: left; vertical-align: top;}
    th { background-color: #f2f2f2; }
    tbody tr:nth-child(odd) { background-color: #f9f9f9; }
    code { background-color: #eee; padding: 2px 4px; border-radius: 3px;}
    .nil { color: #999; font-style: italic; }
    .boolean-true { color: green; font-weight: bold; }
    .boolean-false { color: red; }
    .status-active { color: green; }
    .status-expired { color: orange; }
    .status-archived { color: grey; } /* Beispiel für andere Stati */
  </style>
</head>
<body>

  <h1>Übersicht der Testdaten</h1>

  <!-- ==================== Produkte ==================== -->
  <h2>Produkte (<%= @products.count %>)</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Produktname</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |p| %>
        <tr>
          <td><%= p.product_id %></td>
          <td><%= p.product_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- ==================== Lizenztypen ==================== -->
  <h2>Lizenztypen (<%= @license_types.count %>)</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Typ Name</th>
        <th>Beschreibung</th>
      </tr>
    </thead>
    <tbody>
      <% @license_types.each do |lt| %>
        <tr>
          <td><%= lt.license_type_id %></td>
          <td><%= lt.type_name %></td>
          <td><%= lt.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- ==================== Rollen ==================== -->
  <h2>Rollen (<%= @roles.count %>)</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Rollenname</th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |r| %>
        <tr>
          <td><%= r.role_id %></td>
          <td><%= r.role_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- ==================== Benutzer ==================== -->
  <h2>Benutzer (<%= @users.count %>)</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>E-Mail</th>
        <th>Name</th>
        <th>Aktiv?</th>
        <th>Passwort gesetzt?</th>
        <th>Rollen</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td><%= u.user_id %></td>
          <td><%= u.username %></td>
          <td>
            <% if u.email %>
              <%= u.email %>
            <% else %>
              <span class="nil">N/A</span>
            <% end %>
          </td>
          <td><%= [u.first_name, u.last_name].compact.join(' ') %></td>
          <td class="<%= u.is_active ? 'boolean-true' : 'boolean-false' %>"><%= u.is_active %></td>
          <td>
             <% if u.credential %>
               Ja
             <% else %>
               <span class="nil">Nein</span>
             <% end %>
          </td>
          <td>
            <% if u.roles.any? %>
              <%= u.roles.map(&:role_name).join(', ') %>
            <% else %>
              <span class="nil">Keine</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- ==================== Geräte ==================== -->
  <h2>Geräte (<%= @devices.count %>)</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Gerätename</th>
        <th>Seriennummer</th>
        <th>Notizen</th>
      </tr>
    </thead>
    <tbody>
      <% @devices.each do |d| %>
        <tr>
          <td><%= d.device_id %></td>
          <td><%= d.device_name %></td>
          <td>
            <% if d.serial_number %>
              <%= d.serial_number %>
            <% else %>
              <span class="nil">N/A</span>
            <% end %>
          </td>
          <td><%= d.notes %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- ==================== Lizenzen ==================== -->
  <h2>Lizenzen (<%= @licenses.count %>)</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name / Key</th>
        <th>Produkt</th>
        <th>Typ</th>
        <th>Plätze</th>
        <th>Verfügbar</th>
        <th>Kaufdatum</th>
        <th>Ablaufdatum</th>
        <th>Kosten</th>
        <th>Anbieter</th>
        <th>Status</th>
        <th>Notizen</th>
      </tr>
    </thead>
    <tbody>
      <% @licenses.each do |l| %>
        <tr>
          <td><%= l.license_id %></td>
          <td>
            <strong>
              <% if l.license_name %>
                <%= l.license_name %>
              <% else %>
                <span class="nil">Kein Name</span>
              <% end %>
            </strong><br>
            <small>Key: <code>
              <% if l.license_key %>
                <%= l.license_key %>
              <% else %>
                <span class="nil">N/A</span>
              <% end %>
            </code></small>
          </td>
          <td>
            <% if l.product %>
              <%= l.product.product_name %>
            <% else %>
              <span class="nil">Gelöscht?</span>
            <% end %>
          </td>
          <td>
            <% if l.license_type %>
              <%= l.license_type.type_name %>
            <% else %>
              <span class="nil">Gelöscht?</span>
            <% end %>
          </td>
          <td><%= l.seat_count %></td>
          <td><%= l.available_seats %></td> <!-- Nutzt die Methode im Model -->
          <td>
            <% if l.purchase_date %>
              <%= l.purchase_date %>
            <% else %>
              <span class="nil">N/A</span>
            <% end %>
          </td>
          <td>
            <% if l.expire_date %>
              <%= l.expire_date %>
            <% else %>
              <span class="nil">Unbegrenzt</span>
            <% end %>
          </td>
          <td>
            <% if l.cost %>
              <%= "#{l.cost} #{l.currency}" %>
            <% else %>
              <span class="nil">N/A</span>
            <% end %>
          </td>
          <td>
            <% if l.vendor %>
              <%= l.vendor %>
            <% else %>
              <span class="nil">N/A</span>
            <% end %>
          </td>
          <td class="status-<%= (l.status || 'unknown').downcase %>"><%= l.status || 'Unknown' %></td>
          <td><%= l.notes %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- ==================== Lizenzzuweisungen ==================== -->
  <h2>Lizenzzuweisungen (<%= @assignments.count %>)</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Lizenz</th>
        <th>Zugewiesen an</th>
        <th>Zuweisungsdatum</th>
        <th>Ablauf Zuweisung</th>
        <th>Aktiv?</th>
        <th>Notizen</th>
      </tr>
    </thead>
    <tbody>
      <% @assignments.each do |a| %>
        <tr>
          <td><%= a.assignment_id %></td>
          <td>
            <% if a.license %>
              <%= a.license.license_name %>
            <% else %>
              <span class="nil">Lizenz gelöscht?</span>
            <% end %>
            <small>(ID: <%= a.license_id %>)</small>
          </td>
          <td>
            <% if a.user %>
              User: <%= a.user.username %> (ID: <%= a.user_id %>)
            <% elsif a.device %>
              Device: <%= a.device.device_name %> (ID: <%= a.device_id %>)
            <% else %>
              <span class="nil">Weder User noch Device?</span>
            <% end %>
          </td>
          <td>
            <% if a.assignment_date %>
              <%= a.assignment_date.strftime('%Y-%m-%d %H:%M') %>
            <% else %>
              <span class="nil">N/A</span>
            <% end %>
          </td>
          <td>
            <% if a.assignment_expire_date %>
              <%= a.assignment_expire_date.strftime('%Y-%m-%d %H:%M') %>
            <% else %>
              <span class="nil">Unbegrenzt</span>
            <% end %>
          </td>
          <td class="<%= a.is_active ? 'boolean-true' : 'boolean-false' %>"><%= a.is_active %></td>
          <td><%= a.notes %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- ==================== Zuweisungs-Logs ==================== -->
  <h2>Zuweisungs-Logs (<%= @logs.count %>)</h2>
  <table>
    <thead>
      <tr>
        <th>Log ID</th>
        <th>Assignment ID</th>
        <th>Zeitstempel</th>
        <th>Aktion</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% @logs.each do |log| %>
        <tr>
          <td><%= log.log_id %></td>
          <td>
            <% if log.assignment_id %>
               <%= log.assignment_id %>
            <% else %>
               <span class="nil">Zuweisung gelöscht</span>
            <% end %>
          </td>
          <td>
            <% if log.log_timestamp %>
              <%= log.log_timestamp.strftime('%Y-%m-%d %H:%M:%S') %>
            <% else %>
              <span class="nil">N/A</span>
            <% end %>
          </td>
          <td><code><%= log.action %></code></td>
          <td><%= log.details %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</body>
</html>
