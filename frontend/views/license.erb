<%# views/license.erb %>
<h1>Available Licences</h1>
<p>for self assignment</p>

<div class="products">
  <div class="product" onclick="showPopup('Word')">
    <h2>Word</h2>
    <p>Microsoft Word ist eine Software zur Textverarbeitung, Formatierung von Dokumenten...</p>
  </div>
  <div class="product" onclick="showPopup('Powerpoint')">
    <h2>Powerpoint</h2>
    <p>Microsoft PowerPoint ist ein Programm zum Erstellen und Präsentieren von Folien...</p>
  </div>
  <!-- Weitere Produkte können hier folgen -->
</div>

<!-- Popup -->
<div class="popup" id="licensePopup">
  <div class="popup-content">
    <h3 id="popupTitle">License</h3>
    <p>Are you sure that you want the License Key?</p>
    <button id="getKeyBtn">Get License Key</button>
    <button id="cancelBtn" onclick="hidePopup()">Cancel</button>
  </div>
</div>

<script>
  function showPopup(productName) {
    document.getElementById("popupTitle").textContent = productName;
    document.getElementById("licensePopup").style.display = "flex";
  }
  function hidePopup() {
    document.getElementById("licensePopup").style.display = "none";
  }
</script>
