<%# frontend/views/auth/login.erb %>
<% @title = "Login - Licentra" %>
<% @page_heading = "Licentra Login" %>
<%# Wir sagen dem Layout, welches Footer-Partial es verwenden soll %>
<% @auth_card_footer_partial = :'auth/partials/_login_footer' %>

<%# Der Hauptinhalt (Formular) wird in den yield-Block des Layouts eingefügt %>
<form id="login-form" action="/login" method="post">
  <div class="mb-3"> <%# Margin von mb-4 auf mb-3 angepasst für etwas Kompaktheit %>
    <label for="email" class="form-label small mb-1">Email Address</label>
    <input type="email" id="email" name="email" class="form-control py-2 rounded-3" placeholder="Enter your email address" required value="<%= params[:email] %>">
  </div>

  <div class="mb-2"> <%# Margin von mb-3 auf mb-2 angepasst %>
    <label for="password" class="form-label small mb-1">Password</label>
    <input type="password" id="password" name="password" class="form-control py-2 rounded-3" placeholder="Enter your password" required>
  </div>

  <div class="mb-3 text-end"> <%# Margin angepasst %>
    <a href="/forgot_password" class="small text-decoration-none text-primary">Forgot Password?</a>
  </div>

  <div class="d-grid gap-2 mt-4"> <%# d-grid für vollere Button-Breite %>
    <button type="submit" id="login-button" class="btn btn-primary btn-lg py-2 rounded-3">
      Login
    </button>
  </div>
</form>