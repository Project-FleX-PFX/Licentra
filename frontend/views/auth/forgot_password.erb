<%# frontend/views/auth/forgot_password.erb %>
<% @title = "Forgot Password - Licentra" %>
<% @page_heading = "Reset Your Password" %>
<% @auth_card_footer_partial = :'auth/partials/_forgot_password_footer' %>

<p class="text-center text-muted mb-4 small">
  Enter your email address and we will send you a link to reset your password if an account exists and is active.
</p>

<form id="forgot-password-form" action="/forgot_password" method="post">
  <div class="mb-4">
    <label for="email" class="form-label small mb-1">Email Address</label>
    <input type="email" id="email" name="email" class="form-control py-2 rounded-3" placeholder="Enter your registered email address" required>
  </div>

  <div class="d-grid gap-2 mt-4">
    <button type="submit" id="reset-button" class="btn btn-primary btn-lg py-2 rounded-3">
      Send Reset Link
    </button>
  </div>
</form>